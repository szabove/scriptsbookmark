@model ScriptsBookmark.Models.Bookmark
@{
    ViewData["Title"] = "Create";
}

<br />

<h2 class="text-info">Create Bookmark</h2>
<br />

<form method="post" asp-action="Create">
    <div class="backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-8 mb-2">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-8">
                @Html.TextAreaFor(b => b.Description, new { @id="Description", @rows="10"})
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Code" class="col-form-label"></label>
            </div>
            <div class="col-8">
                @Html.TextAreaFor(b => b.Code, new { @id="Code", @rows="10"})
            </div>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
@section Scripts{

    <script>
        tinymce.init({
            selector: '#Description',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>


    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}